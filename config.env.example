# AWS Laravel Setup Configuration
# Copy this file to config.env and customize the values before running setup_aws_laravel.sh

# AWS Region (us-east-1 recommended for free tier)
REGION=us-east-1

# EC2 Configuration
INSTANCE_TYPE=t2.micro
AMI_ID=ami-0c02fb55956c7d316

# Database Configuration
DB_USERNAME=admin
DB_PASSWORD=LaravelSecurePass123!
DB_NAME=laravel_app

# Security Configuration
# Set to your IP address to restrict SSH access (recommended for production)
# Example: SSH_CIDR=192.168.1.100/32
SSH_CIDR=0.0.0.0/0

# Laravel Application Configuration
APP_NAME="My Laravel App"
APP_ENV=production
APP_DEBUG=false

# S3 Configuration
S3_BUCKET_PREFIX=laravel-app-storage

# Optional: Enable HTTPS (requires domain name)
ENABLE_HTTPS=false
DOMAIN_NAME=

# Optional: Enable CloudWatch monitoring
ENABLE_MONITORING=false

# Optional: Enable automated backups
ENABLE_BACKUPS=false
BACKUP_RETENTION_DAYS=7
